@model List<InventoryViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner start -->
<div class="banner" id="banner">
    <div id="bannerCarousole" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner banner-slider-inner text-center">
            <div class="carousel-item banner-max-height active item-bg">
                <img class="d-block w-100 h-100" src="~/img/static/car-1.jpg" alt="banner">
                <div class="carousel-content container banner-info-2 bi-2 text-l">
                    <h3>Explore Your Dream Car</h3>
                    <h5>
                        Allow us to guide you through the innovative stress<br>
                        free approach in finding your dream car.
                    </h5>
                </div>
            </div>
            <div class="carousel-item banner-max-height item-bg">
                <img class="d-block w-100 h-100" src="~/img/static/car-2.jpg" alt="banner">
                <div class="carousel-content container banner-info-2 bi-2 text-l">
                    <h3>Wow Factor Standard</h3>
                    <h5>
                        Allow us to guide you through the innovative stress<br>
                        free approach in finding your dream car.
                    </h5>
                </div>
            </div>
            <div class="carousel-item banner-max-height item-bg">
                <img class="d-block w-100 h-100" style="object-fit:cover" src="~/img/static/car-3.jpg" alt="banner">
                <div class="carousel-content container banner-info-2 bi-2 text-l">
                    <h3>We Are Wheel</h3>
                    <h5>
                        Allow us to guide you through the innovative stress<br>
                        free approach in finding your dream car.
                    </h5>
                </div>
            </div>
        </div>
        <div class="btn-secton">
            <ol class="carousel-indicators">
                <li data-target="#bannerCarousole" data-slide-to="0" class="active"></li>
                <li data-target="#bannerCarousole" data-slide-to="1"></li>
                <li data-target="#bannerCarousole" data-slide-to="2"></li>
            </ol>
        </div>
    </div>
</div>
<!-- Banner end -->
<!-- Featured car start -->
<div class="featured-car content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <!-- Option bar start -->
                @if (Model.Count > 0)
                {
                    <div class="option-bar clearfix">
                        <div class="row">
                            <div class="col-lg-5 col-md-6 col-sm-12">
                                <div class="sorting-options2">
                                    <h5>Showing @Model.Count Listings</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="option-bar clearfix">
                        <div class="row">
                            <div class="col-lg-5 col-md-6 col-sm-12">
                                <div class="sorting-options2">
                                    <h5>Sorry! There are no items available!</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @foreach (var item in Model)
                {
                    <!-- Car box 2 start -->
                    <div class="car-box-2 cb-4">
                        <div class="row">
                            <div class="col-lg-5 col-md-12 col-pad">
                                <div class="car-thumbnail">
                                    <div class="tag">For Sale</div>
                                    <div class="price-box">
                                        <span class="del"><del>@item.TotalCostBeforeDiscount</del></span>
                                        <br>
                                        <span>@item.TotalCost</span>
                                    </div>
                                    @{

                                        var imageFileName = "http://placehold.it/475x332";
                                        if (item.AllImages.Count > 0)
                                        {
                                            imageFileName = $"/uploads/img/{item.AllImages[0]}";
                                        }
                                    }
                                    <img class="d-block w-100" src="@imageFileName" alt="car image" />
                                </div>
                            </div>
                            <div class="col-lg-7 col-md-12 col-pad align-self-center">
                                <div class="detail">
                                    <h3 class="title">
                                        <a asp-action="ViewDetails" asp-route-id="@item.Id">@item.CarMakeName @item.CarModelName <span class="trim-name-view">@item.TrimName</span></a>
                                    </h3>
                                    <p>@item.Description</p>
                                    <ul class="facilities-list clearfix">
                                        <li>@item.KmToDisplay km</li>
                                        <li>@item.TransmissionTypeToDisplay</li>
                                        <li>@item.Year</li>
                                        <li>@item.FuelTypeName</li>
                                        <li>@item.DriveTypeName</li>
                                        <li>@item.ColorName</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Featured car start -->


@section Scripts {
    <script>
        $(document).ready(function () {

        });
    </script>
}