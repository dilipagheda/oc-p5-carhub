@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>


<!-- Contact section start -->
<div class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-section">
                    <div class="logo-2">
                        <a href="index.html">
                            <img src="~/img/logos/black-logo.png" />
                        </a>
                    </div>
                    <h3>Sign into your account</h3>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group form-box">
                            <input  asp-for="Input.UserName" type="text" class="input-text" placeholder="User Name">
                            <i class="flaticon-mail"></i>
                        </div>
                        <div class="form-group form-box">
                            <input asp-for="Input.Password" type="password" class="input-text" placeholder="Password">
                            <i class="flaticon-lock"></i>
                        </div>
                        <div class="form-group mb-0 clearfix">
                            <button type="submit" class="btn-md btn-theme float-left">Login</button>
                            <a asp-page="./ForgotPassword" class="forgot-password">Forgot Password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact section end -->




